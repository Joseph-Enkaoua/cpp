NAME		= worldOnFire
SRC			= main.cpp AAnimal.cpp Dog.cpp Cat.cpp WrongAAnimal.cpp WrongDog.cpp WrongCat.cpp Brain.cpp
OBJ			= ${SRC:.cpp=.o}
CXXFLAGS	= -Wall -Wextra -Werror -std=c++98
RM			= rm -rf
DEBUG		= -fsanitize=address
all: $(NAME)

$(NAME): $(OBJ)
	c++ $(OBJ) $(CXXFLAGS) -o $(NAME)

clean:
	$(RM) $(OBJ)

fclean: clean
	$(RM) $(NAME)

re: fclean all

.PHONY: all clean fclean re